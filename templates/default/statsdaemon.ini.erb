# statsdaemon submits internal metrics using itself.
# with this key you can separate stats of separate instances
# if this value is or expands to an empty string, it will be set to 'null'
# supported variables:
#  ${HOST} : hostname
instance = "<%= node[:chef_base][:statsd][:instance] %>"

# prefixes for the various types.  they should probably end with a dot.
prefix_rates = "<%= node[:chef_base][:statsd][:prefix_rates] %>"
prefix_timers = "<%= node[:chef_base][:statsd][:prefix_timers] %>"
prefix_gauges = "<%= node[:chef_base][:statsd][:prefix_gauges] %>"

percentile_thresholds = "<%= node[:chef_base][:statsd][:percentile_thresholds] %>"
max_timers_per_s = <%= node[:chef_base][:statsd][:max_timers_per_s] %>
